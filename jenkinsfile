pipeline {
    agent any

    stages {
        stage('Install Apache') {
            steps {
                    sh '''
                    sudo apt install apache2
                    '''
                
            }
        }
        stage('copying index.html file to apache2') {
            steps {
                    sh '''
                    git clone -b staging https://github.com/GauthamBappalige/microdegree.git
                    cp index.html /var/www/html/
                    '''
            }
        }
    }     
}
